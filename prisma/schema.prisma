datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String    @default("12345678")
  name      String    @unique
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
}

enum Role {
  ADMIN
  MANAGER
  USER
}